{
  "manifest_version": 3,
  "name": "SQL Helper",
  "version": "1.0",
  "description": "Busca e gera comandos SQL com base em palavras-chave.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "SQL Helper"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [],
  "host_permissions": [],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
